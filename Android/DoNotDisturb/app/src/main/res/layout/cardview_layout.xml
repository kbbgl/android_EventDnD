<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.privat.kobbigal.donotdisturb.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/event_CV"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <TextView
            android:id="@+id/event_title_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/geostar_fill"
            android:layout_marginStart="12dp"
            android:gravity="start"
            android:text="Test"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/event_time_TV"
            android:text="Mon Nov 19 12:00:00 GMT+02:00 2018"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Switch
            android:id="@+id/dnd_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="5dp"
            android:text="DND" />


    </android.support.v7.widget.CardView>

</LinearLayout>
